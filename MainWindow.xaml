<Window x:Class="MapTool1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Map Resizer" Height="800" Width="800" SizeChanged="Window_SizeChanged" Closing="Window_Closing">
    <Grid>
        <DockPanel x:Name="dockPanel">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Open" Click="MenuItemOpen_Click" x:Name="openItem"/>
                    <MenuItem Header="_Save" Click="MenuItemSave_Click" x:Name="saveItem"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <Canvas x:Name="canvas">

        </Canvas>
    </Grid>
</Window>
